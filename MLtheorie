import random
from bke import MLAgent, is_winner, opponent, RandomAgent, train_and_plot
 
 
class TTTSlayer800(MLAgent):
    def evaluate(self, board):
        if is_winner(board, self.symbol):
            reward = 1
        elif is_winner(board, opponent[self.symbol]):
            reward = -1
        else:
            reward = 0
        return reward
    
    
random.seed(1)

ttt_slayer_800 = TTTSlayer800()
pizza_no_pineapple = RandomAgent()

train_and_plot(
    agent=ttt_slayer_800,
    validation_agent=pizza_no_pineapple,
    iterations=50,
    trainings=100,
    validations=1000)
